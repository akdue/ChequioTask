@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<section class="py-5 hero-gradient text-white rounded-3 shadow-sm mb-4">
    <div class="container">
        <h1 class="display-6 fw-bold mb-2">Reset your password</h1>
        <p class="lead mb-0">Enter your email and a new password to regain access.</p>
    </div>
</section>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-xl-5">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Create a new password</h5>
                </div>

                <div class="card-body">
                    <!-- Validation summary -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

                    <!-- Reset form -->
                    <form method="post" class="row g-3">
                        @* Hidden reset code from email link *@
                        <input asp-for="Input.Code" type="hidden" />

                        <!-- Email -->
                        <div class="col-12">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- New password -->
                        <div class="col-12">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" id="pwd" />
                                <button type="button" class="btn btn-outline-secondary" id="togglePwd">Show</button>
                            </div>
                            <div class="form-text">
                                Use at least 8 characters, with a mix of upper/lowercase, a number, and a symbol.
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm password -->
                        <div class="col-12">
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" id="pwd2" />
                                <button type="button" class="btn btn-outline-secondary" id="togglePwd2">Show</button>
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="col-12 d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Reset password</button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-muted small d-flex justify-content-between">
                    <a asp-area="Identity" asp-page="/Account/Login">Back to sign in</a>
                    <a asp-area="Identity" asp-page="/Account/ForgotPassword">Forgot password?</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Show validation summary only when there are errors
        (function () {
            var summary = document.querySelector('[asp-validation-summary]');
            if (summary && summary.innerText.trim().length > 0) {
                summary.classList.remove('d-none');
            }
        })();

        // Simple password visibility toggles
        (function () {
            function toggle(btnId, inputId) {
                const btn = document.getElementById(btnId);
                const input = document.getElementById(inputId);
                if (!btn || !input) return;
                btn.addEventListener('click', () => {
                    const isPwd = input.getAttribute('type') === 'password';
                    input.setAttribute('type', isPwd ? 'text' : 'password');
                    btn.textContent = isPwd ? 'Hide' : 'Show';
                });
            }
            toggle('togglePwd', 'pwd');
            toggle('togglePwd2', 'pwd2');
        })();
    </script>
}
