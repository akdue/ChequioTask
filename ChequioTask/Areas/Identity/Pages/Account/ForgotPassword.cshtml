@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password";
}

<section class="py-5 hero-gradient text-white rounded-3 shadow-sm mb-4">
    <div class="container">
        <h1 class="display-6 fw-bold mb-2">Forgot your password?</h1>
        <p class="lead mb-0">Enter your email and we’ll send you a link to reset it.</p>
    </div>
</section>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-xl-5">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Request password reset</h5>
                </div>

                <div class="card-body">
                    <!-- Validation summary -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

                    <form method="post" class="row g-3">
                        @* Antiforgery token is emitted automatically *@

                        <div class="col-12">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="col-12 d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Send reset link</button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-muted small d-flex justify-content-between">
                    <a asp-area="Identity" asp-page="/Account/Login">Back to sign in</a>
                    <a asp-area="Identity" asp-page="/Account/Register">Create account</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Show validation summary only when there are errors
        (function () {
            var summary = document.querySelector('[asp-validation-summary]');
            if (summary && summary.innerText.trim().length > 0) {
                summary.classList.remove('d-none');
            }
        })();
    </script>
}
