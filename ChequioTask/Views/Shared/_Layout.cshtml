@* _Layout.cshtml — Flatly polish: dark navbar, consistent spacing, local assets *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChequioTask</title>

    @* Bootswatch (Flatly) - local *@
    <link rel="stylesheet" href="~/bootswatch/dist/flatly/bootstrap.min.css" asp-append-version="true" />
    @* Site overrides should come after the theme *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* Static web assets generated by the SDK (keep) *@
    <link rel="stylesheet" href="~/ChequioTask.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @* Dark primary navbar fits Flatly better than the default light navbar *@
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">ChequioTask</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav"
                        aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cheques" asp-action="Index">Cheques</a>
                        </li>
                    </ul>

                    @* Identity partial (login/register) *@
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3 mt-5">
        <div class="container text-muted small">
            &copy; @DateTime.UtcNow.Year - ChequioTask — Abdalkreem Abuaresh - 
            <a class="link-secondary" asp-area="" asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>

    @* JS: jQuery (for unobtrusive validation), then Bootstrap bundle, then site.js *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
